#:import random random

<Stones>:
    canvas:
        Rectangle:
            source : 'poop.png'
            pos: self.pos
            size: self.size

<Spaceship>:
    canvas:
        Rectangle:
            source: 'spaceship.png'
            pos: self.pos
            size: self.size


<SpaceGame>:
    player : ship
    stones : stones
    restartpos : restartpos
    playbuttonpos : playbuttonpos
    highscorepos : highscorepos
    pausepos : pausepos
    playpos : playpos
    currenthighscorepos : currenthighscorepos
    soundscorepos : soundscorepos

    canvas:
        Rectangle:
            source: 'langit.jpg'
            pos: self.pos
            size: self.size

    Button:
        background_normal : 'move.png'
        x : root.width*0.5 - self.width / 2
        size : root.width*0.1, root.width*0.1
        on_press: root.moveship()

    Spaceship:
        size : root.width*0.1, root.width*0.1
        id: ship
        y : self.height
        x : root.width*0.5 - self.width / 2

    Stones:
        size : root.width*0.5, root.width*0.5
        id: stones
        y : root.height
        center_x : root.center_x

    Label:
        font_size : 50
        center_x : root.center_x
        top : root.top - 10
        text : str(root.player.score)

    Label:
        id : highscorepos
        font_size : 50
        center_x : root.center_x
        top : root.top - self.height - self.height
        text : 'Best ' + str(root.player.highscore)

    Label:
        id : currenthighscorepos
        font_size : 50
        x : root.width + root.width
        top : root.height + root.height
        text : 'Best ' + str(root.player.current_highscore)

    Button:
        background_normal : 'start.png'
        size : root.width*0.1, root.width*0.1
        id : playbuttonpos
        on_release:
            root.startgame()

    Button:
        background_normal : 'start.png'
        size: root.width*0.1, root.width*0.1
        id : restartpos
        top : root.top + root.height
        x : root.width + root.width
        on_release:
            root.restart_game()

    Button:
        background_normal : 'paused.png'
        size: root.width*0.1, root.width*0.1
        id : pausepos
        top : root.top + root.height
        x : root.width + root.width
        on_release: root.pause()

    Button:
        background_normal : 'start.png'
        size: root.width*0.1, root.width*0.1
        id : playpos
        top : root.top + root.height
        x : root.width + root.width
        on_release : root.play()

    Button:
        background_normal : 'soundon.png' if root.player.soundscore == 1 else 'soundoff.png'
        size: root.width*0.1, root.width*0.1
        id : soundscorepos
        top : root.top
        x : root.width - self.width
        on_release :
            root.soundvolume()




