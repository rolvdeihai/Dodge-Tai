#:import random random

<Stones>:
    size: 400, 400
    canvas:
        Rectangle:
            source : 'poop.png'
            pos: self.pos
            size: self.size

<Spaceship>:
    size: 120, 120
    canvas:
        Rectangle:
            source: 'spaceship.png'
            pos: self.pos
            size: self.size


<SpaceGame>:
    player : ship
    stones : stones
    restartpos : restartpos
    playbuttonpos : playbuttonpos
    highscorepos : highscorepos
    pausepos : pausepos
    playpos : playpos
    currenthighscorepos : currenthighscorepos
    soundscorepos : soundscorepos

    canvas:
        Rectangle:
            source: 'langit.jpg'
            pos: self.pos
            size: self.size

    Button:
        x : root.x
        center_x : root.center_x
        size : 100, 100
        on_press: root.moveship()

    Spaceship:
        id: ship
        y : self.height
        center_x : root.center_x

    Stones:
        id: stones
        y : root.height
        center_x : root.center_x

    Label:
        font_size : 50
        center_x : root.center_x
        top : root.top - 10
        text : str(root.player.score)

    Label:
        id : highscorepos
        font_size : 50
        center_x : root.center_x
        top : root.top - self.height - self.height
        text : 'Best ' + str(root.player.highscore)

    Label:
        id : currenthighscorepos
        font_size : 50
        x : root.width + root.width
        top : root.height + root.height
        text : 'Best ' + str(root.player.current_highscore)

    Button:
        background_normal : 'start.png'
        size : 100, 100
        id : playbuttonpos
        on_release:
            root.startgame()

    Button:
        background_normal : 'start.png'
        size: 100, 100
        id : restartpos
        top : root.top + root.height
        x : root.width + root.width
        on_release:
            root.restart_game()

    Button:
        background_normal : 'paused.png'
        size: 100, 100
        id : pausepos
        top : root.top + root.height
        x : root.width + root.width
        on_release: root.pause()

    Button:
        background_normal : 'start.png'
        size: 100, 100
        id : playpos
        top : root.top + root.height
        x : root.width + root.width
        on_release : root.play()

    Button:
        background_normal : 'soundon.png' if root.player.soundscore == 1 else 'soundoff.png'
        size: 100, 100
        id : soundscorepos
        top : root.top
        x : root.width - self.width
        on_release :
            root.soundvolume()




